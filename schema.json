{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "survey-core.subset.schema.json",
  "title": "SurveyJS core â€“ schema subset",
  "type": "object",
  "required": ["pages"],
  "additionalProperties": true,
  "properties": {
    "pages": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/page" }
    }
  },
  "$defs": {
    "page": {
      "type": "object",
      "required": ["elements"],
      "additionalProperties": true,
      "properties": {
        "name": { "type": "string" },
        "title": { "type": "string" },
        "elements": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/element" }
        }
      }
    },
    "element": {
      "type": "object",
      "required": ["type", "name"],
      "additionalProperties": true,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["text", "comment", "boolean", "panel", "dropdown", "radiogroup"]
        },
        "name": { "type": "string", "minLength": 1 },
        "title": { "type": "string" },

        "isRequired": { "type": "boolean" },
        "visibleIf": { "type": "string" },
        "enableIf": { "type": "string" },
        "readOnly": { "type": "boolean" },

        "defaultValue": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" },
            { "type": "null" },
            { "type": "array" },
            { "type": "object" }
          ]
        },

        "placeholder": { "type": "string" },

        "inputType": {
          "type": "string",
          "enum": ["text", "email", "number", "password", "tel", "url"]
        },

        "validators": {
          "type": "array",
          "items": { "$ref": "#/$defs/validator" }
        },

        "choices": { "$ref": "#/$defs/choices" },

        "elements": {
          "type": "array",
          "items": { "$ref": "#/$defs/element" }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "panel" } } },
          "then": { "required": ["elements"] }
        },
        {
          "if": {
            "properties": {
              "type": { "enum": ["dropdown", "radiogroup"] }
            }
          },
          "then": { "required": ["choices"] }
        }
      ]
    },
    "choices": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          { "type": "number" },
          { "type": "boolean" },
          {
            "type": "object",
            "additionalProperties": true,
            "required": ["value", "text"],
            "properties": {
              "value": {},
              "text": { "type": "string" }
            }
          }
        ]
      }
    },
    "validator": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["email", "regex"] },
        "text": { "type": "string" },
        "regex": { "type": "string" }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "regex" } } },
          "then": { "required": ["regex"] }
        }
      ]
    }
  }
}
